{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "."
            }
        },
        {
            "name": "Run Project (Django)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/services/manage.py",
            "args": [
                "runserver",
                "--noreload"
            ],
            "env": {
                "PYTHONPATH": "."
            },
            "django": true
        },
        {
            "name": "Django Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/services/manage.py",
            "args": [
                "test",
                "services.data_app"
            ],
            "env": {
                "PYTHONPATH": "."
            },
            "django": true
        },
        {
            "name": "Django Makemigrations",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/services/manage.py",
            "args": [
                "makemigrations"
            ],
            "env": {
                "PYTHONPATH": "."
            },
            "django": true
        },
        {
            "name": "Django Migrate",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/services/manage.py",
            "args": [
                "migrate"
            ],
            "env": {
                "PYTHONPATH": "."
            },
            "django": true
        },
        {
            "name": "Django Fixtures",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/services/manage.py",
            "args": [
                "load_fixtures"
            ],
            "env": {
                "PYTHONPATH": "."
            },
            "django": true
        }
    ]
}